@model CSHARP_TEST1.Models.ClienteNewEdictcs;

<div class="modal-dialog modal-lg modal-dialog-centered">
	<div class="modal-content">

		<form id="FormularioRegistroCliente">
			<input type="hidden" id="CodCliente" name="CodCliente" value="" />
			<input type="hidden" id="TipoOperacion" name="TipoOperacion" value="" />

			
			<div class="modal-header">
				<h5 class="modal-title" id="modal-title">Nuevo registro222</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="row mb-4">
					<div class="col-6">
						<label>Nacionalidad</label>
						<select asp-items="Model.ListPais" asp-for="CodPais" class="form-select" aria-label=".form-select-sm example">
						</select>
					</div>
					<div class="col-6">
						<label>Estatus</label>
						<div class="form-check mt-2">
							<label class="form-check-label" for="flexCheckDefault">
								Inactivo
							</label>
							<input class="form-check-input" type="checkbox" asp-for="Inactivo" value="true">
						</div>
					</div>
				</div>


				<div class="row mb-4">
					<div class="col-4">
						<div class="form-group">
							<label>Cedula</label>
							<input type="text" class="form-control" asp-for="Cedula" />
						</div>
					</div>
					<div class="col-4">
						<div class="form-group">
							<label>Nombre</label>
							<input type="text" class="form-control" asp-for="Nombre" />
						</div>
					</div>
					<div class="col-4">
						<div class="form-group">
							<label>Apellido</label>
							<input type="text" class="form-control" asp-for="Apellido" />
						</div>
					</div>
				</div>

				<div class="row mb-4">
					<div class="col-6">
						<label>Marcar los documentos entregados por el cliente</label>
					</div>
					<div class="col-6">
						<div class="overflow-auto p-0 mb-0 mb-md-0 me-md-0 bg-light" height="20px" style="max-width: 260px; max-height: 100px;">

							@foreach (var item in Model.ListaTipoDocumentos)
							{
								<div class="form-check">
									<input class="form-check-input" type="checkbox" id="CodDocumento" name="CodDocumento" value="@item.CodDoc">
									<label class="form-check-label" for="flexCheckDefault">
										@item.Titulo
									</label>
								</div>
							}
						</div>
					</div>
				</div>


				<div class="row">
					<div class="col-12">
						<div class="form-group">
							<label>Direccion</label>
							<textarea class="form-control" rows="3" asp-for="Direccion"></textarea>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
				<button type="submit" id="GrabarRegistro" class="btn btn-primary bg-success">Guardar</button>
			</div>
		</form>
	</div>
</div>